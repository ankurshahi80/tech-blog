<article class = "card">
    <div class ="card-header">
        {{!-- <a href="{{post_url}}" target="_blank">{{title}}</a> --}}
        <a>{{blog.title}}</a>
        Posted by {{blog.user.username}} on {{blog.created_at}}
        {{!-- <span>({{format_url post_url}})</span> --}}
    </div>
    <div class="card-body">
        {{!-- {{vote_count}} {{format_plural "point" vote_count}}  --}}
        <p>{{blog.blog_text}}</p>
    </div>
</article>

{{#if userComment}}
<div>
  {{#each blog.comments}}
  <section class="card">
    <div class="card-header"></div>
    <div class ="card-body">
      <p>{{comment_text}}</p>
    {{!-- </div>
    <div> --}}
    &#8212 {{user.username}}, {{created_at}}
    </div>
  </section>
  {{/each}}
</div>
{{else}}
<section class = "card comment-form">
    <header class="card-header"></header>
    <form class = "card-body">
        <div>
            <p>Comment</p>
            <textarea class ="form-input" name="comment-body"></textarea>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</section>
{{/if}}

<script src="/javascript/comment.js"></script>